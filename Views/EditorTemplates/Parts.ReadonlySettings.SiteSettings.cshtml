@model Lombiq.Hosting.Readonly.Models.ReadonlySettingsPart

<fieldset>
    <legend>@T("Readonly Settings")</legend>
    <ol>
        @if (!Model.Force)
        {
            <li>
                @Html.EditorFor(m => m.Readonly)
                <label for="@Html.FieldIdFor(m => m.Readonly)" class="forcheckbox">@T("Is read-only")</label>
                @Html.ValidationMessageFor(m => m.Readonly)
                @Html.Hint(T("If checked, no content item can be saved."))
            </li>
        }
        <li>
            @Html.LabelFor(m => m.Message, T("Message"))
            @Html.TextBoxFor(m => m.Message, new { @class = "text large" })
            @Html.ValidationMessageFor(m => m.Message)
            @Html.Hint(T("This message will be displayed when someone tries to save a content item while the site is read-only."))
        </li>
    </ol>
</fieldset>
